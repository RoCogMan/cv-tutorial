<mujoco model="scene">
  <include file="ur5e.xml" />

  <statistic center="0.3 0 0.4" extent="0.8" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" offwidth="1920" offheight="1080" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" />

    <mesh file="checkerboard_0.obj" />
    <mesh file="checkerboard_1.obj" />
    <material name="cb_black" specular="0.0" shininess="0.0" rgba="0.0000 0.0000 0.0000 1" />
    <material name="cb_white" specular="0.0" shininess="0.0" rgba="1 1 1 1" />
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" castshadow="false" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />

    <body name="checkerboard" pos="0.8 0.0 0.01" euler="3.1415 0 1.5707">
      <geom mesh="checkerboard_0" material="cb_black" class="visual" />
      <geom mesh="checkerboard_1" material="cb_white" class="visual" />
      <geom mesh="checkerboard_0" class="collision" type="mesh" />
      <geom mesh="checkerboard_1" class="collision" type="mesh" />
    </body>

    <body name="remote_cam_link" pos="0.3 -1.0 0.9" quat="0.41383164 -0.88265335  0.21108005 -0.07149584" mocap="true">
      <!-- <geom type="box" size="1e-2 1e-2 1e-2" class="visual" /> -->
      <camera name="remote_cam" euler="3.1415 0 0" />
    </body>

  </worldbody>
</mujoco>